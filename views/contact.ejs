<%- include("partials/header"); -%>

<div class="contact">
    <div class="container text-center">
        <div class="header">
            <h3 class="fw-bold">Contact Us</h3>
            <p>
              Lorem ipsum, dolor sit amet consectetur
              adipisicing elit.
            </p>
          </div>
    </div>
</div>


<div class="d-lg-flex justify-content-evenly contact">
    <div class="form">
        <div class="form-group">
            <form action="/contact" method="post">
                <label class="fw-bold" for="name">Name</label>
                <input class="form-control" type="text" id="name">
                <label class="fw-bold" for="email">Email</label>
                <input class="form-control" type="email" id="email">
                <label class="fw-bold" for="message">Message</label>
                <textarea class="form-control" name="message" id="message" cols="30" rows="10"></textarea>
                <button class="btn btn-dark form-control mt-3" type="submit">Submit</button>
            </form>
            
        </div>
    </div>
    
    <div class="map mt-5">
        <div class="container">
            <iframe width="520" height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" id="gmap_canvas" src="https://maps.google.com/maps?width=520&amp;height=400&amp;hl=en&amp;q=UNN%20Enugu+(Contact%20Us)&amp;t=&amp;z=12&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"></iframe><a href='https://maps-generator.com/'></a>
        </div>
    
    </div>
